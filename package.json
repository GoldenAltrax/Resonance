{
  "name": "resonance",
  "private": true,
  "version": "4.0.0",
  "description": "Resonance - Simply Music. A premium PWA music player.",
  "author": "Ibrahim Khaleelulla",
  "type": "module",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm run dev:frontend & npm run dev:backend",
    "dev:frontend": "npm run dev -w frontend",
    "dev:backend": "npm run dev -w backend",
    "build": "npm run build -w frontend && npm run build -w backend",
    "build:frontend": "npm run build -w frontend",
    "build:backend": "npm run build -w backend",
    "db:generate": "npm run db:generate -w backend",
    "db:migrate": "npm run db:migrate -w backend",
    "db:studio": "npm run db:studio -w backend",
    "import:songs": "npm run import:songs -w backend --"
  }
}
